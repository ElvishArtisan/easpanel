Summary: EAS Control Applet for DASDAQ/Rivendell
Name: easpanel
Version: @VERSION@
Release: @RPM_RELEASE@%{?dist}
License: GPLv2
Packager: Fred Gleason <fredg@paravelsystems.com>
Source: %{name}-@VERSION@.tar.gz
BuildRequires: qt-devel
BuildRoot: /var/tmp/%{name}-@VERSION@


%description
EASPanel is a control applet for sending Emergency Alert System (EAS)
alerts generated by a DASDAQ EAS generator to Rivendell.


%package rlm
Summary: Rivendell Loadable Module for EASPanel


%description rlm
Provides a Rivendell Loadable Module (RLM) for EASPanel.


%prep


%setup


%build
%configure
make


%install
rm -rf $RPM_BUILD_ROOT
make install DESTDIR=$RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT/var/eas


%post
if test ! -e /etc/easpanel.conf ; then
  cp /usr/share/doc/%{name}-@VERSION@/easpanel-sample.conf /etc/easpanel.conf
fi
if [ -x %{_bindir}/gtk-update-icon-cache ] ; then
  %{_bindir}/gtk-update-icon-cache -f --quiet %{_datadir}/icons/hicolor || :
fi


%clean
rm -rf $RPM_BUILD_ROOT


%files
%defattr(-,root,root)
%{_bindir}/easp
%{_datadir}/applications/easpanel.desktop
%{_datadir}/icons/hicolor/16x16/apps/easpanel.png
%{_datadir}/icons/hicolor/22x22/apps/easpanel.png
%{_datadir}/icons/hicolor/32x32/apps/easpanel.png
%{_datadir}/icons/hicolor/48x48/apps/easpanel.png
%attr(0777,root,root) %dir /var/eas
%doc AUTHORS
%doc ChangeLog
%doc COPYING 
%doc NEWS 
%doc README 
%doc conf/easpanel-sample.conf


%post rlm
if test ! -e /etc/rlm_easpanel.conf ; then
  cp /usr/share/doc/%{name}-rlm-@VERSION@/rlm_easpanel-sample.conf /etc/rlm_easpanel.conf
fi


%files rlm
%{_libdir}/rivendell/rlm_easpanel.rlm
%doc conf/rlm_easpanel-sample.conf


%changelog
* Sun Sep  2 2018 Fred Gleason <fredg@paravelsystems.com>
-- Initial RPM creation.
